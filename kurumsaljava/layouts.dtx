      \ifnum\l@youthpvi < \z@
        \put(\l@youthpvi,\l@youtvdo){\line(1,0){-\l@youthpvi}}
      \else
        \put(\l@youthpvi,\l@youtvdo){\line(-1,0){\l@youthpvi}}
